<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/updateImgResult"
        android:layout_width="304dp"
        android:layout_height="187dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/editTxtName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTxtName"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="24dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/editTxtRarity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateImgResult" />

    <EditText
        android:id="@+id/editTxtDescription"
        android:layout_width="337dp"
        android:layout_height="200dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="1dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/editTxtCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtRarity" />

    <EditText
        android:id="@+id/editTxtCost"
        android:layout_width="243dp"
        android:layout_height="33dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="37dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtDescription" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="102dp"
        android:text="@string/update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtDescription" />

    <EditText
        android:id="@+id/editTxtRarity"
        android:layout_width="117dp"
        android:layout_height="28dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="250dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/editTxtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxtName" />
</androidx.constraintlayout.widget.ConstraintLayout>